---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Community - UCLI Tools">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-green-400 via-blue-400 to-purple-400"></div>
    <!-- CSS Grid Pattern -->
    <div class="absolute inset-0 opacity-30" style="background-image: linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px); background-size: 50px 50px; mask-image: linear-gradient(180deg, white, rgba(255,255,255,0));"></div>

    <Navbar />

    <!-- Hero Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32 text-center">
      <h1 class="text-5xl md:text-7xl font-black tracking-tight mb-6">
        <span class="text-white">
          Join Our
        </span>
        <br />
        <span class="text-white">
          Community
        </span>
      </h1>

      <p class="text-xl md:text-2xl text-white/90 mb-4 max-w-3xl mx-auto">
        Connect with developers building the future of CLI tools
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a href="https://github.com/ucli-tools" class="px-8 py-4 bg-white hover:bg-gray-100 rounded-lg font-semibold text-lg transition text-gray-900">
          GitHub
        </a>
        <a href="https://github.com/orgs/ucli-tools/discussions" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 rounded-lg font-semibold text-lg transition text-white">
          Discussions
        </a>
      </div>
    </div>
  </div>

  <!-- Community Links -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <a href="https://github.com/ucli-tools" class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 hover:border-gray-400/50 transition block">
        <div class="w-16 h-16 bg-gray-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">GitHub</h3>
        <p class="text-white/80">View source code, report issues, and contribute</p>
      </a>

      <a href="https://github.com/orgs/ucli-tools/discussions" class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 hover:border-blue-400/50 transition block">
        <div class="w-16 h-16 bg-blue-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">Discussions</h3>
        <p class="text-white/80">Ask questions and share ideas with the community</p>
      </a>

      <a href="https://docs.ucli.tools/community/contributing" class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20 hover:border-green-400/50 transition block">
        <div class="w-16 h-16 bg-green-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">Contributing</h3>
        <p class="text-white/80">Learn how to contribute to UCLI Tools</p>
      </a>
    </div>
  </div>

  <Footer />
</Layout>
