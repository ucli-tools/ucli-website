---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="UCLI Tools - Available Tools">
  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Background gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-yellow-400 via-orange-400 to-red-400"></div>
    <!-- CSS Grid Pattern -->
    <div class="absolute inset-0 opacity-30" style="background-image: linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px); background-size: 50px 50px; mask-image: linear-gradient(180deg, white, rgba(255,255,255,0));"></div>

    <Navbar />

    <!-- Hero Content -->
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32 text-center">
      <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl font-black tracking-tight mb-4 md:mb-6 leading-tight">
        <span class="text-white">
          Available
        </span>
        <br />
        <span class="text-white">
          CLI Tools
        </span>
      </h1>

      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-white/90 mb-4 max-w-3xl mx-auto px-2">
        Professional command-line tools for developers
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8 md:mb-12">
        <a href="https://docs.ucli.tools" class="px-6 sm:px-8 py-4 bg-white hover:bg-gray-100 rounded-lg font-semibold text-base sm:text-lg transition text-gray-900 min-h-[48px] flex items-center justify-center">
          View Documentation
        </a>
      </div>
    </div>
  </div>

  <!-- Tools Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- ucli -->
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20">
        <div class="w-16 h-16 bg-yellow-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-yellow-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">ucli</h3>
        <p class="text-white/80 mb-4">Tool manager - Install and manage all CLI tools</p>
        <div class="bg-black/50 rounded-lg mb-4 border border-yellow-500/30 overflow-hidden">
          <div class="flex items-center gap-1.5 px-3 py-1.5 bg-black/30 border-b border-yellow-500/20">
            <div class="w-2 h-2 rounded-full bg-red-400"></div>
            <div class="w-2 h-2 rounded-full bg-yellow-400"></div>
            <div class="w-2 h-2 rounded-full bg-green-400"></div>
            <button
              id="copy-ucli-btn"
              class="ml-auto p-1 hover:bg-white/10 rounded transition flex items-center gap-1 text-white/50 hover:text-white text-xs"
              title="Copy command"
            >
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
            <script>
              document.getElementById('copy-ucli-btn').addEventListener('click', function() {
                navigator.clipboard.writeText('ucli build gits');
              });
            </script>
          </div>
          <pre class="text-sm text-yellow-200 font-mono p-3"><code>ucli build gits</code></pre>
        </div>
        <a href="/tools/ucli" class="inline-block px-6 py-3 bg-yellow-600 hover:bg-yellow-700 rounded-lg font-semibold transition text-white">
          Learn More →
        </a>
      </div>

      <!-- GitS -->
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20">
        <div class="w-16 h-16 bg-orange-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-orange-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">gits</h3>
        <p class="text-white/80 mb-4">Git workflow automation supporting Forgejo, Gitea, and GitHub</p>
        <div class="bg-black/50 rounded-lg mb-4 border border-orange-500/30 overflow-hidden">
          <div class="flex items-center gap-1.5 px-3 py-1.5 bg-black/30 border-b border-orange-500/20">
            <div class="w-2 h-2 rounded-full bg-red-400"></div>
            <div class="w-2 h-2 rounded-full bg-yellow-400"></div>
            <div class="w-2 h-2 rounded-full bg-green-400"></div>
            <button
              id="copy-gits-btn"
              class="ml-auto p-1 hover:bg-white/10 rounded transition flex items-center gap-1 text-white/50 hover:text-white text-xs"
              title="Copy command"
            >
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
            <script>
              document.getElementById('copy-gits-btn').addEventListener('click', function() {
                navigator.clipboard.writeText('gits push-all -py');
              });
            </script>
          </div>
          <pre class="text-sm text-orange-200 font-mono p-3"><code>gits push-all -py</code></pre>
        </div>
        <a href="/tools/gits" class="inline-block px-6 py-3 bg-orange-600 hover:bg-orange-700 rounded-lg font-semibold transition text-white">
          Learn More →
        </a>
      </div>

      <!-- mdtexpdf -->
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20">
        <div class="w-16 h-16 bg-red-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">mdtexpdf</h3>
        <p class="text-white/80 mb-4">Convert Markdown documents to PDF with LaTeX quality</p>
        <div class="bg-black/50 rounded-lg mb-4 border border-red-500/30 overflow-hidden">
          <div class="flex items-center gap-1.5 px-3 py-1.5 bg-black/30 border-b border-red-500/20">
            <div class="w-2 h-2 rounded-full bg-red-400"></div>
            <div class="w-2 h-2 rounded-full bg-yellow-400"></div>
            <div class="w-2 h-2 rounded-full bg-green-400"></div>
            <button
              id="copy-mdtexpdf-btn"
              class="ml-auto p-1 hover:bg-white/10 rounded transition flex items-center gap-1 text-white/50 hover:text-white text-xs"
              title="Copy command"
            >
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
            <script>
              document.getElementById('copy-mdtexpdf-btn').addEventListener('click', function() {
                navigator.clipboard.writeText('mdtexpdf convert doc.md');
              });
            </script>
          </div>
          <pre class="text-sm text-red-200 font-mono p-3"><code>mdtexpdf convert doc.md</code></pre>
        </div>
        <a href="/tools/mdtexpdf" class="inline-block px-6 py-3 bg-red-600 hover:bg-red-700 rounded-lg font-semibold transition text-white">
          Learn More →
        </a>
      </div>

      <!-- mdaudiobook -->
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-white/20">
        <div class="w-16 h-16 bg-pink-500/20 rounded-lg flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
          </svg>
        </div>
        <h3 class="text-2xl font-bold mb-3 text-white">mdaudiobook</h3>
        <p class="text-white/80 mb-4">Convert Markdown content to audiobooks and podcasts</p>
        <div class="bg-black/50 rounded-lg mb-4 border border-pink-500/30 overflow-hidden">
          <div class="flex items-center gap-1.5 px-3 py-1.5 bg-black/30 border-b border-pink-500/20">
            <div class="w-2 h-2 rounded-full bg-red-400"></div>
            <div class="w-2 h-2 rounded-full bg-yellow-400"></div>
            <div class="w-2 h-2 rounded-full bg-green-400"></div>
            <button
              id="copy-mdaudiobook-btn"
              class="ml-auto p-1 hover:bg-white/10 rounded transition flex items-center gap-1 text-white/50 hover:text-white text-xs"
              title="Copy command"
            >
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
            </button>
            <script>
              document.getElementById('copy-mdaudiobook-btn').addEventListener('click', function() {
                navigator.clipboard.writeText('mdaudiobook generate book.md');
              });
            </script>
          </div>
          <pre class="text-sm text-pink-200 font-mono p-3"><code>mdaudiobook generate book.md</code></pre>
        </div>
        <a href="/tools/mdaudiobook" class="inline-block px-6 py-3 bg-pink-600 hover:bg-pink-700 rounded-lg font-semibold transition text-white">
          Learn More →
        </a>
      </div>
    </div>

    <div class="text-center mt-12">
      <p class="text-lg text-white/80 mb-6">All tools are installed with a single command using the ucli tool manager</p>
      <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl max-w-2xl mx-auto overflow-hidden">
        <div class="flex items-center gap-2 px-4 py-2.5 bg-black/30 border-b border-white/10">
          <div class="w-3 h-3 rounded-full bg-red-400"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
          <div class="w-3 h-3 rounded-full bg-green-400"></div>
          <span class="text-white/60 text-sm ml-2">Terminal</span>
          <button
            id="copy-install-all-btn"
            class="ml-auto p-1.5 hover:bg-white/10 rounded transition flex items-center gap-1.5 text-white/60 hover:text-white text-xs"
            title="Copy command"
          >
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            Copy
          </button>
          <script>
            document.getElementById('copy-install-all-btn').addEventListener('click', function() {
              navigator.clipboard.writeText('ucli build gits mdtexpdf mdaudiobook');
            });
          </script>
        </div>
        <pre class="text-white font-mono text-sm p-6"><code><span class="text-white/70"># Install multiple tools at once</span>
<span class="text-yellow-200">ucli</span> <span class="text-orange-200">build</span> gits mdtexpdf mdaudiobook</code></pre>
      </div>
    </div>
  </div>

  <Footer />
</Layout>
